# PRRC OS Suite - Pylint Configuration
# Phase 0: Comprehensive Linting Standards
# Last Updated: 2025-11-02

[MAIN]
# Files or directories to be skipped
ignore=CVS,.git,__pycache__,.pytest_cache,.mypy_cache,.ruff_cache,build,dist,venv,.venv
ignore-patterns=^\.#,.*\.egg-info$

# Use multiple processes to speed up Pylint
jobs=0

# Pickle collected data for later comparisons
persistent=yes

# List of plugins (as comma separated values of python module names)
load-plugins=

# Discover python modules and packages in the file system subtree
recursive=yes

[MESSAGES CONTROL]
# Disable specific warnings/errors
disable=
    C0111,  # missing-docstring (temporary, will enable after Phase 0)
    C0103,  # invalid-name (for short variable names like x, y, i)
    R0903,  # too-few-public-methods (for dataclasses and models)
    R0913,  # too-many-arguments (common in constructors)
    W0212,  # protected-access (needed for Qt internals)
    C0301,  # line-too-long (handled by black)
    C0330,  # bad-continuation (conflicts with black)
    R0801,  # duplicate-code (will address in refactoring)

# Enable specific warnings that are disabled by default
enable=
    useless-suppression,
    deprecated-pragma,
    use-symbolic-message-instead

[REPORTS]
# Set the output format
output-format=text

# Display a full report or only the messages
reports=no

# Activate the evaluation score
score=yes

[REFACTORING]
# Maximum number of nested blocks for function/method body
max-nested-blocks=5

[BASIC]
# Naming conventions
argument-naming-style=snake_case
attr-naming-style=snake_case
class-attribute-naming-style=any
class-const-naming-style=UPPER_CASE
class-naming-style=PascalCase
const-naming-style=UPPER_CASE
function-naming-style=snake_case
inlinevar-naming-style=any
method-naming-style=snake_case
module-naming-style=snake_case
variable-naming-style=snake_case

# Regular expressions for naming (if needed)
# function-rgx=^[a-z_][a-z0-9_]{2,30}$
# variable-rgx=^[a-z_][a-z0-9_]{2,30}$
# const-rgx=^[A-Z_][A-Z0-9_]{2,30}$
# class-rgx=^[A-Z][a-zA-Z0-9]+$

# Good variable names
good-names=i,j,k,x,y,z,_,id,db,ui,app,ok

# Bad variable names
bad-names=foo,bar,baz,toto,tutu,tata

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# Maximum number of lines in a module
max-module-lines=1000

# String used as indentation unit
indent-string='    '

# Expected format of line ending
expected-line-ending-format=LF

[LOGGING]
# Format style used to check logging format string
logging-format-style=new

[MISCELLANEOUS]
# List of note tags to take in consideration
notes=FIXME,XXX,TODO,HACK,NOTE

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=4

# Ignore imports when computing similarities
ignore-imports=yes

[SPELLING]
# Spelling dictionary name (requires pylint-spelling plugin)
# spelling-dict=en_US

# List of comma separated words that should not be checked
# spelling-ignore-words=

[STRING]
# Check for string quotes consistency
check-quote-consistency=no

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=

# List of decorators that produce context managers
contextmanager-decorators=contextlib.contextmanager

# Ignore Qt dynamic attributes
ignored-classes=
    PyQt5,PyQt6,PySide2,PySide6,
    QtCore,QtWidgets,QtGui,
    QObject,QMainWindow,QWidget,QApplication

[VARIABLES]
# Tells whether we should check for unused import in __init__ files
init-import=no

# List of strings which can identify a callback function by name
callbacks=cb_,_cb,callback_,_callback

[CLASSES]
# List of method names used to declare instance attributes
defining-attr-methods=__init__,__new__,setUp,__post_init__

# List of valid names for the first argument in a class method
valid-classmethod-first-arg=cls

# List of valid names for the first argument in a metaclass class method
valid-metaclass-classmethod-first-arg=mcs

[DESIGN]
# Maximum number of arguments for function/method
max-args=7

# Maximum number of attributes for a class
max-attributes=10

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function/method body
max-branches=12

# Maximum number of locals for function/method body
max-locals=15

# Maximum number of parents for a class
max-parents=7

# Maximum number of public methods for a class
max-public-methods=20

# Maximum number of return/yield for function/method body
max-returns=6

# Maximum number of statements in function/method body
max-statements=50

# Minimum number of public methods for a class
min-public-methods=0

[IMPORTS]
# Allow wildcard imports from modules that define __all__
allow-wildcard-with-all=no

# Force import order to follow Google style
# import-order-style=google

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=Exception,BaseException
